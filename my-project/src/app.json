{
  "pages": [
    "pages/login/main",
    "pages/index/main",
    "pages/logs/main",
    "pages/manage/main",
    "pages/relation/main"
  ],
  "entryPagePath":"pages/login/main",
  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#fff",
    "navigationBarTitleText": "智能家居",
    "navigationBarTextStyle": "black",
    "enablePullDownRefresh":true
  },
  "permission":{
    "scope.userLocation":{
      "desc":"你的位置信息将用于获取天气信息"
    }
  },
  "tabBar": {
    "color": "#333",
    "backgroundColor": "#fafafa",
    "selectedColor": "#3d7ef9",
    "borderStyle": "white",
    "list": [{
      "text": "首页",
      "pagePath": "pages/index/main",
      "iconPath": "static/tabs/home.png",
      "selectedIconPath": "static/tabs/home-active.png"
    }, {
      "text": "数据",
      "pagePath": "pages/logs/main",
      "iconPath": "static/tabs/data.png",
      "selectedIconPath": "static/tabs/data-active.png"
    },{
      "text": "管理",
      "pagePath": "pages/manage/main",
      "iconPath": "static/tabs/manage.png",
      "selectedIconPath": "static/tabs/manage-active.png"
    }],
    "position": "bottom"
  },
  "networkTimeout":{
    "request":10000
  },
  "usingComponents":{
    "van-button":"@vant/weapp/dist/button/index",
    "van-field": "@vant/weapp/dist/field/index",
    "van-toast":"@vant/weapp/dist/toast/index",
    "van-dialog":"@vant/weapp/dist/dialog/index",
    "van-icon":"@vant/weapp/dist/icon/index",
    "van-skeleton":"@vant/weapp/dist/skeleton/index",
    "van-radio":"@vant/weapp/dist/radio/index",
    "van-radio-group":"@vant/weapp/dist/radio-group/index"
  }
}
